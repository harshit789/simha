<p id="notice"><%= notice %></p>

<h1>Listing Cabs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Model</th>
      <th>Price</th>
      <% if current_user.admin? %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @cabs.each do |cab| %>
      <tr>
        <td><%= cab.name %></td>
        <td><%= cab.model %></td>
        <td><%= cab.price %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Show', cab %></td>
          <td><%= link_to 'Edit', edit_cab_path(cab) %></td>
          <td><%= link_to 'Destroy', cab, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

